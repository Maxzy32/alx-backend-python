pipeline {
    agent any

    environment {
        // Use your credential ID here
        GIT_CREDENTIALS = 'github-creds'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    credentialsId: "${env.GIT_CREDENTIALS}",
                    url: 'https://github.com/your-username/alx-backend-python.git'
            }
        }

        stage('Set up Python Environment') {
            steps {
                script {
                    // ShiningPanda provides python tools
                    withPythonEnv('Python3') {
                        sh 'python -m venv venv'
                        sh '. venv/bin/activate && pip install --upgrade pip'
                        sh '. venv/bin/activate && pip install -r requirements.txt'
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    withPythonEnv('Python3') {
                        sh '. venv/bin/activate && pytest --junitxml=report.xml'
                    }
                }
            }
        }

        stage('Publish Test Report') {
            steps {
                junit 'report.xml'
            }
        }
    }

    triggers {
        // Manual trigger only (no GitHub webhook)
    }
}
